<div class="container">
  <h2><%= @project.title %></h3>
  <p>Project ID: <%= @project.id %></p>
  <a href="/projects/<%= @project.id %>/edit">Edit Project</a>
  <form class="" action="/projects/<%= @project.id %>/add_vol" method="post">
    <label for="">Add Volunteer</label>
    <input type="text" name="volunteer_name" value="" required>
    <button type="submit">Add Volunteer</button>
  </form>
  <% if @project.volunteers.any? %>
    <div class="container">
      <h3>Volunteers:</h3>
      <ul>
        <%@project.volunteers.each do |volunteer| %>
          <li><a href="/volunteer/<%= volunteer.id %>"><%= volunteer.name %></a></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
